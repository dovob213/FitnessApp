<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동 경험"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- 초급 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBeginner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="초급"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/ivBeginnerCheck"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="운동을 처음 시작하거나, 시작한 지 얼마 안 된 분"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 중급 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardIntermediate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="중급"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/ivIntermediateCheck"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="꾸준히 운동을 해왔으며, 기본적인 자세에 익숙한 분"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 상급 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAdvanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="상급"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/ivAdvancedCheck"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="오랜 기간 운동을 통해 높은 수준의 기술과 체력을 가진 분"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 저장 버튼 -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="저장"
        android:textSize="16sp" />

</LinearLayout>
