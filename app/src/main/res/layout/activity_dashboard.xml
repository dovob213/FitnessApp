<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운동 루틴 분석 대시보드"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardToggle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <Button
                    android:id="@+id/btnWeekly"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primary_blue"
                    android:text="주간"
                    android:textColor="#FFFFFF"/>
                <Button
                    android:id="@+id/btnMonthly"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#00000000"
                    android:textColor="@color/text_dark"
                    android:stateListAnimator="@null"
                    android:text="월간"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/cardToggle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/progressTime"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/circular_progress"
                        android:progress="75"
                        android:max="100"/>

                    <TextView
                        android:id="@+id/tvTotalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0h 00m"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시간"
                        android:textSize="12sp"
                        android:textColor="#757575"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/progressCalorie"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/circular_progress"
                        android:progress="60"
                        android:max="100"/>
                    <TextView
                        android:id="@+id/tvTotalCalorie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 kcal"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kcal"
                        android:textSize="12sp"
                        android:textColor="#757575"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ProgressBar
                        android:id="@+id/progressDays"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/circular_progress"
                        android:progress="57"
                        android:max="100"/>
                    <TextView
                        android:id="@+id/tvTotalDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 / 7"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="days"
                        android:textSize="12sp"
                        android:textColor="#757575"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardWeeklyActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/cardSummary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="이번 주 활동"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/layoutDailyProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:weightSum="7">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ProgressBar
                            android:id="@+id/pbMon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/circular_progress"
                            android:progress="0"
                            android:max="100"/>
                        <TextView
                            android:text="월"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ProgressBar
                            android:id="@+id/pbTue"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/circular_progress"
                            android:progress="0"
                            android:max="100"/>
                        <TextView
                            android:text="화"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ProgressBar
                            android:id="@+id/pbWed"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/circular_progress"
                            android:progress="0"
                            android:max="100"/>
                        <TextView
                            android:text="수"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ProgressBar
                            android:id="@+id/pbThu"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/circular_progress"
                            android:progress="0"
                            android:max="100"/>
                        <TextView
                            android:text="목"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ProgressBar
                            android:id="@+id/pbFri"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/circular_progress"
                            android:progress="0"
                            android:max="100"/>
                        <TextView
                            android:text="금"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ProgressBar
                            android:id="@+id/pbSat"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/circular_progress"
                            android:progress="0"
                            android:max="100"/>
                        <TextView
                            android:text="토"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ProgressBar
                            android:id="@+id/pbSun"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/circular_progress"
                            android:progress="0"
                            android:max="100"/>
                        <TextView
                            android:text="일"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMuscle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/cardWeeklyActivity">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvMuscleTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="부위별 운동 진행률"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ProgressBar
                    android:id="@+id/pbUpperBody"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/circular_progress"
                    android:progress="0"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/pbLowerBody"
                    app:layout_constraintTop_toBottomOf="@id/tvMuscleTitle"/>

                <TextView
                    android:id="@+id/tvUpperText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_blue"
                    app:layout_constraintStart_toStartOf="@id/pbUpperBody"
                    app:layout_constraintEnd_toEndOf="@id/pbUpperBody"
                    app:layout_constraintTop_toTopOf="@id/pbUpperBody"
                    app:layout_constraintBottom_toBottomOf="@id/pbUpperBody"/>

                <TextView
                    android:text="상체"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/pbUpperBody"
                    app:layout_constraintEnd_toEndOf="@id/pbUpperBody"
                    app:layout_constraintTop_toBottomOf="@id/pbUpperBody"/>

                <ProgressBar
                    android:id="@+id/pbLowerBody"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/circular_progress"
                    android:progress="0"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toEndOf="@id/pbUpperBody"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvMuscleTitle"/>

                <TextView
                    android:id="@+id/tvLowerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_orange"
                    app:layout_constraintStart_toStartOf="@id/pbLowerBody"
                    app:layout_constraintEnd_toEndOf="@id/pbLowerBody"
                    app:layout_constraintTop_toTopOf="@id/pbLowerBody"
                    app:layout_constraintBottom_toBottomOf="@id/pbLowerBody"/>

                <TextView
                    android:text="하체"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/pbLowerBody"
                    app:layout_constraintEnd_toEndOf="@id/pbLowerBody"
                    app:layout_constraintTop_toBottomOf="@id/pbLowerBody"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/cardMuscle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>